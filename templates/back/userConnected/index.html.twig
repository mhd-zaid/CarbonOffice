	<div class="px-8">
		<div class="border-gray-200 bg-gray-50 shadow-md shadow-gray-400 rounded-lg grid grid-cols-5 gap-4 p-4 mt-14">
			<div class="col-start-1 flex justify-center items-center"><img src="https://randomuser.me/api/portraits/men/{{ user.id }}.jpg" alt="" class="rounded-full"></div>
			<div class=" col-span-1 flex flex-col justify-center">
				<p class="font-bold">{{ user.firstname }} {{ user.lastname }}</p>
				<p><a href="mailto:{{ user.email }}">{{ user.email }}</a></p>
				<p class="flex">
					{% if user.reward.level is defined %}
						{% if user.reward.level < 10 %}
							{% include 'components/medal1.html.twig' with { 'color': '#CD7F32' } %}
						{% elseif user.reward.level >= 10 and user.reward.level < 30 %}
							{% include 'components/medal1.html.twig' with { 'color': '#C0C0C0' } %}
						{% elseif user.reward.level >= 30 and user.reward.level < 60 %}
							{% include 'components/medal1.html.twig' with { 'color': '#FFD700' } %}
						{% elseif user.reward.level >= 60 and user.reward.level < 90 %}
							{% include 'components/medal2.html.twig' with { 'color': '#CD7F32' } %}
						{% elseif user.reward.level >= 90 and user.reward.level < 120 %}
							{% include 'components/medal2.html.twig' with { 'color': '#C0C0C0' } %}
						{% elseif user.reward.level >= 120 and user.reward.level < 150 %}
							{% include 'components/medal2.html.twig' with { 'color': '#FFD700' } %}
						{% elseif user.reward.level >= 150 and user.reward.level < 200 %}
							{% include 'components/trophy.html.twig' with { 'color': '#C0C0C0' } %}
						{% elseif user.reward.level >= 200 and user.reward.level < 250 %}
							{% include 'components/trophy.html.twig' with { 'color': '#CD7F32' } %}
						{% elseif user.reward.level >= 250 %}
							{% include 'components/trophy.html.twig' with { 'color': '#FFD700' } %}
						{% endif %}
					{% endif %}
				</p>
			</div>
		</div>
		<div class="border-gray-200 bg-gray-50 shadow-md shadow-gray-400 rounded-lg mt-14 p-4">
			<div class="flex justify-between items-center">
				<p class="text-main mb-3">Informations personnels</p>
			</div>
			<div class="grid gap-6 mb-6 md:grid-cols-2">
				<div>
					<label for="first_name" class="block mb-2 text-sm font-medium text-gray-400 dark:text-white">Nom</label>
					<p>{{ user.lastname }}</p>
				</div>
				<div>
					<label for="last_name" class="block mb-2 text-sm font-medium text-gray-400 dark:text-white">Prénom</label>
					<p>{{ user.firstname }}</p>
				</div>
				<div>
					<label for="email" class="block mb-2 text-sm font-medium text-gray-400 dark:text-white">Adresse Email</label>
					<p>{{ user.email }}</p>
				</div>
				<div>
					<label for="phone" class="block mb-2 text-sm font-medium text-gray-400 dark:text-white">Numéro de téléphone</label>
					<p>{{ user.phone }}</p>
				</div>
			</div>
			<p class="text-main mb-3">Adresse</p>
			<div class="grid gap-6 mb-6 md:grid-cols-2">
				<div>
					<label for="visitors" class="block mb-2 text-sm font-medium text-gray-400 dark:text-white">Code Postal</label>
					<p>{{ user.zipCode }}</p>
				</div>
				<div>
					<label for="website" class="block mb-2 text-sm font-medium text-gray-400 dark:text-white">Ville</label>
					<p>{{ user.city }}</p>
				</div>
				<div>
					<label for="visitors" class="block mb-2 text-sm font-medium text-gray-400 dark:text-white">Rue</label>
					<p>{{ user.address }}</p>
				</div>
			</div>
		</div>
	</div>

