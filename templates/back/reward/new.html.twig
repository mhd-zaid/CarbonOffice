{% extends 'back/base.html.twig' %}
{% block main %}

    {{ dump(dispense) }}

    <div class="card">
        <table>
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Email</th>
            </tr>
            </thead>
            <tbody>
            {% for consultant in dispense.consultants %}
                {% set url_give_reward = ea_url()
                    .setController('Back\\Consultant\\DispenseCrudController')
                    .setAction('giveReward')
                    .set('consultantId', consultant.id)
                    .set('dispenseId', dispense.id)
                %}
                <tr>
                    <td>{{ consultant.lastname }}</td>
                    <td>{{ consultant.firstname }}</td>
                    <td>{{ consultant.email }}</td>
                    <td>
                        <a href="#">
                            <button type="button" class="button button-blue">Donner récompense</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
